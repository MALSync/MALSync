{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es2021",
    "lib": [
      "es2021",
      "dom"
    ],
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "dist",
    "**/*.test.ts",
    "**/*.exclude.ts",
    "node_modules"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
